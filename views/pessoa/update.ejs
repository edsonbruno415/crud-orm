<%- include("../partials/header") %>
<div class="container-fluid">
    <div class="mx-auto p-3 mw-100" style="width: 980px;">
        <h1 class="text-center">Atualização Cadastral</h1>
        <form method="POST" action="/pessoas/update">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input value="<%- pessoa.nome %>" type="text" class="form-control" id="nome" name="nome" placeholder="Nome Completo">
                </div>
                <div class="form-group">
                    <label for="nascimento">Nascimento</label>
                    <input value="<%- pessoa.nascimento%>" type="date" class="form-control" id="nascimento" name="nascimento" placeholder="1997-06-30">
                </div>
                <div class="form-group">
                    <label for="cargo">Cargo</label>
                    <input value="<%- pessoa.cargo %>" type="text" class="form-control" id="cargo" name="cargo" placeholder="Desenvolvedor Junior">
                </div>
                <input value="<%- pessoa.id %>" type="hidden" name="id" >
                <button class="btn btn-secondary btn-block btn-lg">Salvar</button>
        </form>
    </div>
</div>
<%- include("../partials/header") %>